<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".BarberActivity">

    <TextView
        android:id="@+id/services_offered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:text="Services Offered"
        android:textSize="30sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/services_page"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/services_offered"
        android:layout_marginTop="40sp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewFree"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10dp"
            android:background="#4162c1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:text="No. 1"
                android:textColor="#30389A"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="50sp"
                android:text="Haircut"
                android:textColor="#30389A"
                android:textStyle="bold" />

            <RatingBar
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="80dp"
                android:numStars="5"
                android:rating="4.5" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewPremium"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20sp"
            android:background="#6e87e2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:text="No. 2"
                android:textColor="#30389A"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="50sp"
                android:text="Beard trim"
                android:textColor="#30389A"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="80dp"
                android:numStars="5"
                android:rating="4.5" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/toolBarThree"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/services_page"
        android:layout_marginTop="10sp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewOverall"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10dp"
            android:background="#7db7f6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:text="No. 3"
                android:textColor="#30389A"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="50sp"
                android:text="Mustache"
                android:textColor="#30389A"
                android:textStyle="bold" />

            <RatingBar
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="80dp"
                android:numStars="5"
                android:rating="4.5" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewOverUnder"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20sp"
            android:background="#4162c1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:text="No. 4"
                android:textColor="#30389A"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="50sp"
                android:text="Massage"
                android:textColor="#30389A"
                android:textStyle="bold" />

            <RatingBar
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="80dp"
                android:numStars="5"
                android:rating="4.5" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>


    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolBarThree"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:onClick="bookAppointment"
        android:text="Book Appointment"
        android:textAllCaps="false" />


</RelativeLayout>